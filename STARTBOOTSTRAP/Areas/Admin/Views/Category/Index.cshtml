@model List<GetCategoryVM>
@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories</h4>

            <a asp-controller="category" asp-action="create" class="btn btn-info">Create</a>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (GetCategoryVM categoryVM in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @categoryVM.Name
                                </td>
                                <td>
                                    <a asp-controller="position" asp-action="update" asp-route-id="@categoryVM.Id" class="btn btn-primary">Update</a>
                                    <a asp-controller="position" asp-action="delete" asp-route-id="@categoryVM.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>